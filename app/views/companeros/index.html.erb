
<center>
<p id="notice"><%= notice %></p>

<h1>Mascotas</h1>

<table  WIDTH="100%">
  <thead>
    <tr>
    <th>Foto</th>
      <th>Nombre</th>
      <th>Edad</th>
      <th>Raza</th>
      <th>Dueño</th>
      <th>Descripción</th>
      <th>Color</th>
      <th>Peso</th>
      <th>Tamaño</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @companeros.each do |companero| %>
        <td></td>
        <td><%= companero.nombre %></td>
        <td><%= companero.edad %></td>
        <td><%= companero.raza %></td>
        <td><%= companero.dueno %></td>
        <td><%= companero.descripcion %></td>
        <td><%= companero.color %></td>
        <td><%= companero.peso %></td>
        <td><%= companero.tamano %></td>
        <td><%= link_to '<button type="button" class="button primary small">Mostrar</button>'.html_safe, companero %></td>
        <td><%= link_to '<button type="button" class="button success small">Editar</button>'.html_safe, edit_companero_path(companero) %></td>
        <td><%= link_to '<button type="button" class="button alert small">Eliminar!</button>'.html_safe, companero, method: :delete, data: { confirm: '¿Estas seguro?' } %>
    
        </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '<button type="button" class="button success basic">Citas</button>'.html_safe, events_path %>
<%= link_to '<button type="button" class="button expanded warning">Nueva mascota</button>'.html_safe, new_companero_path %>
</center>

